<% provide(:title, 'Start Your Project') %>
<h1>Start Your Project</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: @user %>
      <%= f.label :Name %>
      <%= f.text_field :name %>

      <%= f.label :Company %>
      <%= f.text_field :company %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Start My Project", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

